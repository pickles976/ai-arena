{
  "compilerOptions": {
    "module": "ES6",
    "lib": ["es2021", "dom"],
    "target": "ES5",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__/*"]
}