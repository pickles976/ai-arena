{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "allowJs": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "."
    },
    "include": ["src"]
  }